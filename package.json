{
  "name": "@masatomakino/threejs-drag-watcher",
  "version": "0.7.8",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-drag-watcher.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "keywords": [
    "threejs"
  ],
  "dependencies": {
    "@masatomakino/raf-ticker": "^0.2.10"
  },
  "devDependencies": {
    "@masatomakino/fake-mouse-event": "^0.0.8",
    "@masatomakino/gulptask-demo-page": "^0.5.3",
    "@masatomakino/gulptask-dev-server": "^0.4.2",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/three": "^0.146.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "three": "^0.147.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "three": ">=0.126.0 <1.0.0"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo && npm run typedocs",
    "demo": "npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1280\" height=\"640\"></canvas>'",
    "buildTS": "tsc --project tsconfig.cjs.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx @masatomakino/gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.cjs.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "description": "Mouse drag watcher for three.js",
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-drag-watcher/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-drag-watcher#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
